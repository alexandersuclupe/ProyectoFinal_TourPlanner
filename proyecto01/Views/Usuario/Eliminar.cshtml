@model proyecto01.Models.Usuario
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Eliminar">
    <input asp-for="Id" hidden/>
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <div class="form-row">
            <h2 class="text-danger pl-3">¿Esta seguro de Eliminar Ubigeo?</h2>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="nombres">Nombres</label>
                    <input asp-for="nombres" disabled>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="apellidos">Apellidos</label>
                    <input asp-for="apellidos" disabled>
                </div>
                <div class="col-md-6">
                    <label asp-for="usuario">Usuario</label>
                    <input asp-for="usuario" disabled>
                </div>
                <div class="col-md-6">
                    <label asp-for="contraseña">Contraseña</label>
                    <input asp-for="contraseña" disabled>
                </div>
                <div class="col-md-6">
                    <label asp-for="correo_electronico">Correo Electrónico </label>
                    <input asp-for="correo_electronico" disabled>
                </div>
                <div class="col-md-6">
                    <label asp-for="fecha_nacimiento">Fecha Nacimiento</label>
                    <input asp-for="fecha_nacimiento" disabled>
                </div>
                <div class="col-md-6">
                    <label asp-for="fecha_registro">Fecha Registro</label>
                    <input asp-for="fecha_registro" disabled>
                </div>
                <div class="col-md-6">
                    <label asp-for="estado">Estado</label>
                    <input asp-for="estado" disabled>
                </div>
                <br />
                <div>
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a asp-controller="Usuario" asp-action="Index" class="btn btn-success">Regresar</a>
                </div>
            </div>
        </div>
</form>
@section Scripts{
    @{
        <partial name="_validationScriptsPartial"/>
    }

}

