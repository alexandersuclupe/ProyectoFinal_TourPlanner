@model IEnumerable<proyecto01.Models.Producto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div>
        <div>
            <h2>Lista de Productos</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Producto" asp-action="Upsert" class="btn btn-success">Nuevo Producto</a>
        </div>
    </div>
    <br/>
    @if(Model.Count()>0)
    {
        <table class="table table-bordered table-striped" style="width=100%">
            <thead>
                <tr>
                    <th class="text-center">Nombre Producto</th>
                    <th class="text-center">Descripcion Producto</th>
                    <th class="text-center">Precio</th>
                    <th class="text-center">Imagen</th>
                    <th class="text-center">Categoria ID</th>
                    <th class="text-center">Editar/Eliminar</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <th>@item.nombre_producto</th>
                        <th>@item.descripcion_producto</th>
                        <th>@item.precio</th>
                        <th>@item.imagenUrl</th>
                        <th>@item.categoria_id</th>
                        <th class="text-center">
                           <div class="w-75 btn-group" role="group">
                               <a asp-controller="Producto" asp-action="Upsert" asp-route-Id="@item.Id" class="btn btn-primary mx-2">
                                   Editar
                               </a>
                                <a asp-controller="Producto" asp-action="Eliminar" asp-route-Id="@item.Id" class="btn btn-danger mx-2">
                                    Eliminar
                                </a>
                           </div> 
                        </th>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <pNo>No existe ningun registro</pNo>
    }
</div>

