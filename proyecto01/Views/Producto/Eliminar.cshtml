@model proyecto01.Models.Producto
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Eliminar">
    <input asp-for="Id" hidden/>
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <div class="form-row">
            <h2 class="text-danger pl-3">¿Esta seguro de Eliminar Producto?</h2>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="nombre_producto">Producto</label>
                    <input asp-for="nombre_producto" disabled>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="descripcion_producto">Descripcion</label>
                    <input asp-for="descripcion_producto" disabled>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label asp-for="precio">Precio</label>
                        <input asp-for="precio" disabled>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label asp-for="imagenUrl">Imagen URL</label>
                        <input asp-for="imagenUrl" disabled>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label asp-for="categoria_id">Categoria ID</label>
                        <input asp-for="categoria_id" disabled>
                    </div>
                </div>
                <br />
                <div>
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a asp-controller="Producto" asp-action="Index" class="btn btn-success">Regresar</a>
                </div>
            </div>
        </div>
</form>
@section Scripts{
    @{
        <partial name="_validationScriptsPartial"/>
    }

}

