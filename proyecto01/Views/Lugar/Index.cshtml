@model IEnumerable<proyecto01.Models.Lugar>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div>
        <div>
            <h2>Lista de Lugares</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Lugar" asp-action="Upsert" class="btn btn-primary">Nuevo Lugar</a>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Ubigeo</th>
                    <th>Categoria Lugar</th>
                    <th>Editar/Eliminar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th>@item.nombre</th>
                        <th>@item.descripcion</th>
                        <th>@item.Ubigeo.ubigeo</th>
                        <th>@item.Categoria_lugar.nombre</th>
                        <th class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Lugar" asp-action="Upsert" asp-route-Id="@item.Id" class="btn btn-primary mx-2">
                                    Editar
                                </a>
                                <a asp-controller="Lugar" asp-action="Eliminar" asp-route-Id="@item.Id" class="btn btn-danger mx-2">
                                    Eliminar
                                </a>
                            </div>
                        </th>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No hay registros de Productos</p>
    }
</div>
