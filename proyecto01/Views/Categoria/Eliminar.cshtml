@model proyecto01.Models.Categoria
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Eliminar">
    <input asp-for="Id" hidden/>
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <div class="form-row">
            <h2 class="text-danger pl-3">¿Esta seguro de Eliminar Categoria?</h2>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="nombre_categoria">Nombre Categoria</label>
                    <input asp-for="nombre_categoria" disabled>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="abreviatura">Abreviatura</label>
                    <input asp-for="abreviatura" disabled>
                </div>
                <br />
                <div>
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a asp-controller="Categoria" asp-action="Index" class="btn btn-success">Regresar</a>
                </div>
            </div>
        </div>
</form>
@section Scripts{
    @{
        <partial name="_validationScriptsPartial"/>
    }

}

