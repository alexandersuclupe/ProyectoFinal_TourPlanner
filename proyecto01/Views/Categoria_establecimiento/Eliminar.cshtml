@model proyecto01.Models.Categoria_establecimiento
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Eliminar">
    <input asp-for="Id" hidden/>
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <div class="form-row">
            <h2 class="text-danger pl-3">¿Esta seguro de Eliminar Categoria Establecimiento?</h2>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="nombre">Nombre</label>
                    <input asp-for="nombre" disabled>
                </div>
            </div>
            <div class="row">
                <br />
                <div>
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a asp-controller="Categoria_establecimiento" asp-action="Index" class="btn btn-success">Regresar</a>
                </div>
            </div>
        </div>
</form>
@section Scripts{
    @{
        <partial name="_validationScriptsPartial"/>
    }

}

